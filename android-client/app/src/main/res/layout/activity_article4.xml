<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".article.Article1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/article4" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="    By Christmas, hearing this melody, have you begun to fantasize about Santa Claus riding a reindeer sleigh across the night sky? BUT! Reindeer? Sled? Are they all a little outdated? Let's take a look at Santa's 'trendy' transportation in the new era."
                android:textAppearance="@android:style/TextAppearance.Holo" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>